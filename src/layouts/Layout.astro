---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/localbytoast-landing/favicon.svg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Effra";
    src: url("/public/fonts/Effra_W_Md.woff2");
  }

  @font-face {
    font-family: "Source-Sans-Pro";
    src: url("/public/fonts/SourceSansPro-Regular.ttf.woff2");
  }

  h1 {
    @apply font-effra text-4xl font-[500] lg:text-6xl;
  }

  h2 {
    @apply font-effra text-3xl md:text-[52.5px] md:leading-[3.5rem] font-[500] text-[#252525];
  }

  h3 {
    @apply font-sans font-normal text-base md:text-2xl text-[#6C6865] leading-tight md:leading-[2rem];
  }
</style>

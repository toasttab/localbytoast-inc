---
import * as content from "../pages/content/content.md";
import Badge from "./Badge.astro";
import ScrollableSection from "./ScrollableSection.astro";

const { headline, description, badge } = content.frontmatter.app_overview;
---

<div class="mb-6">
  <div class="container mx-auto text-center mt-8 mb-4 px-2">
    <Badge text={badge} />
    <h2 class="text-4xl font-effra my-2 font-medium">
      {headline}
    </h2>
    <p class="text-lg text-[#666666]">
      {description}
    </p>
  </div>

  <ScrollableSection />
</div>

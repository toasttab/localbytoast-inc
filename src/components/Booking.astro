---
import * as content from "../pages/content/content.md";
import Badge from "./Badge.astro";
import booking from "../images/booking.png";
import { Image } from "astro:assets";
import PhoneSVG from '../images/booking/Phones.svg';
import HostSVG from '../images/booking/Host.svg'
import Star1SVG from '../images/booking/Flourish.svg';
import Star2SVG from '../images/booking/Flourish_2.svg';
import Star3SVG from '../images/booking/Flourish_3.svg';

const { headline, description, badge } = content.frontmatter.booking;
---

<section class="flex items-center justify-center px-8">
  <div class="flex flex-col-reverse md:flex-row items-center justify-between max-w-screen-xl w-full mx-auto min-h-full">

    <div class="flex-1 flex flex-col justify-between order-3 md:order-2 md:ml-8 md:mt-8 md:min-h-[600px]">
      <div class="mt-8 md:mt-28 order-1 md:order-1 mb-8 mx-auto md:mb-4 md:text-start text-center">
        <Badge text={badge} />
        <h2 class="my-4">{headline}</h2>
        <h3>{description}</h3>
      </div>
      <div class="w-full order-3 md:order-3">
        <Image src={HostSVG} alt="Host" class="max-w-full h-auto mx-auto mb-0 hidden md:block" />
      </div>
    </div>
    <div class="flex-1 flex flex-row order-2 md:order-3 md:mb-0">
      <Image src={Star1SVG} alt="Host" class="max-w-full h-auto mx-auto mb-0 hidden md:block" />
      <Image src={PhoneSVG} alt="Phone mockup" class="max-w-full md:h-[600px]" />
      <Image src={Star2SVG} alt="Host" class="max-w-full mb-0 hidden md:block" />
    </div>
    <div class="w-full order-1 md:order-3 md:hidden">
      <Image src={HostSVG} alt="Host" class="max-w-full h-auto mx-auto mb-0 " />
    </div>
  </div>
</section>
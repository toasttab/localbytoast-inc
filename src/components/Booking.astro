---
import * as content from "../pages/content/content.md";
import Badge from "./Badge.astro";
import booking from "../images/booking.png";
import { Image } from "astro:assets";

const { headline, description, badge } = content.frontmatter.booking;
---

<div class="py-10 text-center">
  <div class="mb-8 mx-auto max-w-xs lg:max-w-lg">
    <Badge text={badge} />

    <h2 class="my-4">
      {headline}
    </h2>
    <p class="text-secondary type-default">
      {description}
    </p>
  </div>

  <div class="mx-auto max-w-xs lg:max-w-3xl">
    <Image
      src={booking}
      alt="Book your next reservation on the Local by Toast App"
    />
  </div>
</div>

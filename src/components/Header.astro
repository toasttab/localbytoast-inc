---
import { getImage, Image } from "astro:assets";
import logo from "../images/local-by-toast.svg";
import cloud from "../images/cloud.svg";
import phone from "../images/header/hand.svg";
import city from "../images/header/Neighborhood Hero.svg";
import Button from "./Button.astro";
import * as content from "../pages/content/content.md";

const optimizedBackgroundImage = await getImage({ src: city });

const { headline, description, buttonText, altText } =
  content.frontmatter.header;
---
<div class="px-5 pt-5 lg:px-12 lg:py-12 relative mb-12">
  <div class="bg-gradient-to-b from-[#D3E8FF] to-white rounded-lg overflow-hidden px-8 h-[600px] md:h-[800px]">
    <div class="relative mx-auto max-w-7xl text-center pt-10 lg:flex lg:text-left lg:px-8 lg:pt-32">
      <!-- Text Stuff -->
      <div class="max-w-xs mt-4 flex-shrink-0 md:max-w-lg z-20 relative">
        <Image src={logo} alt={altText.logo} class="w-32 lg:w-44 mx-auto lg:mx-0"/>
        <h1 class="mt-3 md:mt-5 md:text-6xl">
          {headline}
        </h1>
        <div class="md:w-full max-w-xl">
          <p class="mb-5 mt-2 z-10 type-default text-secondary md:text-lg">
            {description}
          </p>
        </div>
        <Button text={buttonText} />
      </div>
    </div>
    <!-- Hand -->
    <div class="absolute bottom-0 right-[10%] z-20 h-[600px] md:h-[800px] flex items-end">
      <Image src={phone} alt={altText.phone} class="max-h-[50%] md:max-h-[800px]" />
    </div>
    <!-- City Scape -->
    <div class="absolute bottom-0 left-0 w-full z-10 px-12">
      <Image src={city} alt="City Scape" class="w-full max-h-[500px]" />
    </div>
    <!-- Clouds -->
    <Image
      src={cloud}
      alt={altText.cloud}
      class="absolute top-10 right-0 w-12 animate-loop-scroll-med z-10"
    />
    <Image
      src={cloud}
      alt={altText.cloud}
      class="absolute top-24 right-12 w-24 animate-loop-scroll-fast z-10"
    />
    <Image
      src={cloud}
      alt={altText.cloud}
      class="absolute top-32 right-24 w-8 animate-loop-scroll-slow z-10"
    />
  </div>
</div>



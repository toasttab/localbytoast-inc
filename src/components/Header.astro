---
import { getImage, Image } from "astro:assets";
import logo from "../images/local-by-toast.svg";
import cloud from "../images/cloud.svg";
import phone from "../images/phone-hand.png";
import city from "../images/city.png";
import Button from "./Button.astro";
import * as content from "../pages/content/content.md";

const optimizedBackgroundImage = await getImage({ src: city });

const { headline, description, buttonText, altText } =
  content.frontmatter.header;
---

<div class="px-5 pt-5 lg:px-12 lg:py-12 relative mb-12">
  <div
    class="bg-gradient-to-b from-[#D3E8FF] to-white rounded-lg overflow-clip px-8"
  >
    <div
      class="mx-auto max-w-7xl text-center pt-10 lg:flex lg:text-left lg:px-8 lg:pt-32"
    >
      <div
        class="mx-auto max-w-xs mt-4 flex-shrink-0 mb-8 lg:max-w-md relative z-20"
      >
        <Image
          src={logo}
          alt={altText.logo}
          class="w-32 lg:w-44 mx-auto lg:mx-0"
        />
        <h1 class="mt-3 md:mt-5 md:text-6xl">
          {headline}
        </h1>
        <div class="md:w-full max-w-60 mx-auto lg:mx-0">
          <p class="mb-5 mt-2 z-10 type-default text-secondary md:text-lg">
            {description}
          </p>
        </div>

        <Button text={buttonText} />
      </div>

      <div class="relative z-20">
        <Image src={phone} alt={altText.phone} class="w-60 lg:w-80 z-20" />
      </div>
    </div>
    <!-- <Image src={city} alt={altText.city} class="absolute h-[70vh] lg:h-[80vh] w-full object-cover object-right opacity-30 " /> -->
    <!-- <div class="absolute -z-10 bg-gradient-to-l from-white via-black to-black h-[70vh] lg:h-[80vh] w-full" /> -->
    <!-- <div
      class="absolute bottom-0 h-48 w-[80vw] bg-gradient-to-l from-white via-black to-black bg-no-repeat bg-cover"
      style={`background-image: url('${optimizedBackgroundImage.src}')`}
    >
      HELLO
    </div> -->

    <Image
      src={cloud}
      alt={altText.cloud}
      class="absolute top-10 right-0 w-12 animate-loop-scroll-med z-10"
    />
    <Image
      src={cloud}
      alt={altText.cloud}
      class="absolute top-24 right-12 w-24 animate-loop-scroll-fast z-10"
    />
    <Image
      src={cloud}
      alt={altText.cloud}
      class="absolute top-32 right-24 w-8 animate-loop-scroll-slow z-10"
    />
  </div>
</div>
